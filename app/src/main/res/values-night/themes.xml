<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobile_gl" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/black</item>
    </style>

    <style name="Header">
        <item name="android:textColor">@color/orange_primary</item>
        <item name="android:textSize">@dimen/font_size_3</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:lineSpacingExtra">@dimen/standard_8dp</item>
    </style>
    <style name ="Header.M">
        <item name="android:textColor">@color/teal_secondary</item>
        <item name="android:textSize">@dimen/font_size_4</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:lineSpacingExtra">@dimen/standard_8dp</item>
    </style>
    <style name="Content">
        <item name="android:textColor">@color/light_gray_primary</item>
        <item name="android:textSize">@dimen/font_size_2</item>
        <item name="android:lineSpacingExtra">@dimen/standard_8dp</item>
    </style>
    <style name="Content.M">
        <item name="android:textColor">@color/light_gray_primary</item>
        <item name="android:textSize">@dimen/font_size_3</item>
        <item name="android:lineSpacingExtra">@dimen/standard_8dp</item>
    </style>

</resources>